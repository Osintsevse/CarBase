<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="stas" id="1">
        <createSequence sequenceName="vendor_seq"
                        cycle="false"
                        incrementBy="1"
                        maxValue="1000000"
                        minValue="1"
        />
        <createTable tableName="vendors">
            <column name="vendor_id" type="integer" defaultValueComputed="nextval('vendor_seq')">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="vendor_name" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>